{{- $pctx := . -}}
        {{- $pages := (where site.RegularPages "Type" "!=" "page") -}}
        <?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.Title }}</title>
    <link href="{{ site.BaseURL }}atom.xml" rel="self"/>
    <link href="{{ site.BaseURL }}"/>
    <updated>{{ (now).Format "2006-01-02T15:04:05Z07:00" }}</updated>
    <id>{{ site.BaseURL }}</id>
    <author>
        <name>{{ site.Title }}</name>
    </author>

    {{- range first 15 $pages -}}
    <entry>
        <title>{{ .Title }}</title>
        <link href="{{ .Permalink }}"/>
        <id>{{ .Permalink }}</id>
        <updated>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</updated>
        {{ with .Summary }}
        <summary type="html"><![CDATA[{{ . | safeHTML }}]]></summary>
        {{ end }}
        {{ with .Content }}
        <content type="html"><![CDATA[{{ . | safeHTML }}]]></content>
        {{ end }}
    </entry>
    {{- end }}
</feed>
